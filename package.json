{
  "name": "report-designer",
  "version": "1.0.0",
  "description": "Generic report designer",
  "license": "ISC",
  "author": "tofi lagman <tofilagman@gmail.com>",
  "homepage": "r3al.org.ph",
  "type": "commonjs",
  "main": "src/main.js",
  "scripts": {
    "start": "electron . -- --debug",
    "dist": "electron-builder --linux",
    "dist:win": "electron-builder --win"
  },
  "devDependencies": {
    "electron": "^37.2.3",
    "electron-builder": "^26.0.12",
    "electron-reloader": "^1.2.3"
  },
  "build": {
    "appId": "org.r3al.report-designer",
    "productName": "Report Designer",
    "directories": {
      "output": "dist",
      "buildResources": "resources"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "dist/icons/icon.png",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ],
      "icon": "dist/icons/icon.ico",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    }
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^7.0.0",
    "@monaco-editor/loader": "^1.5.0",
    "bootstrap": "^5.3.7",
    "bson": "^6.10.4",
    "dotenv": "^17.2.0",
    "jquery": "^3.7.1",
    "lz-string": "^1.5.0",
    "monaco-editor": "^0.50.0",
    "popper.js": "^1.16.1",
    "puppeteer-core": "^24.14.0"
  }
}
